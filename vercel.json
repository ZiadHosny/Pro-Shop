{
    "version": 2,
    "builds": [
        {
            "src": "./backend/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/**"
                ]
            }
        },
        {
            "src": "./frontend/build/**",
            "use": "@vercel/static"
        },
        {
            "src": "./uploads/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/",
            "dest": "frontend/build/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "frontend/build/$1"
        }
    ]
}